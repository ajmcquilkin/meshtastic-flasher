{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "pnpm run ui:build",
    "beforeDevCommand": "pnpm run ui:dev",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Meshtastic Desktop Flasher",
    "version": "0.3.3"
  },
  "plugins": {
    "fs": {
      "scope": [
        "**",
        "$APPDATA/*",
        "$APPLOG/*"
      ]
    },
    "shell": {
      "open": ".*"
    }
  },
  "tauri": {
    "allowlist": {
      "clipboard": {
        "all": false,
        "readText": false,
        "writeText": true
      },
      "dialog": {
        "all": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": [
          " http://127.0.0.1:5000/*"
        ]
      },
      "notification": {
        "all": true
      },
      "path": {
        "all": true
      },
      "shell": {
        "all": false,
        "execute": false,
        "open": ".*",
        "scope": [],
        "sidecar": false
      },
      "window": {
        "all": false,
        "center": false,
        "close": false,
        "create": false,
        "hide": false,
        "maximize": false,
        "minimize": false,
        "print": false,
        "requestUserAttention": false,
        "setAlwaysOnTop": false,
        "setClosable": false,
        "setContentProtected": false,
        "setCursorGrab": false,
        "setCursorIcon": false,
        "setCursorPosition": false,
        "setCursorVisible": false,
        "setDecorations": false,
        "setFocus": false,
        "setFullscreen": true,
        "setIcon": false,
        "setIgnoreCursorEvents": false,
        "setMaxSize": false,
        "setMaximizable": false,
        "setMinSize": false,
        "setMinimizable": false,
        "setPosition": false,
        "setResizable": false,
        "setSize": false,
        "setSkipTaskbar": false,
        "setTitle": false,
        "show": false,
        "startDragging": false,
        "unmaximize": false,
        "unminimize": false
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "org.meshtastic.flasher",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "dialog": false,
      "endpoints": [
        "https://api.meshtastic.org/updater/meshtastic-desktop-flasher/{{target}}/{{arch}}/{{current_version}}"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDk1MzdEMEU4QjFCN0UzNTQKUldSVTQ3ZXg2TkEzbGNpRE5ZVnVyZlMyejdSOFh4aTVBZHZYM3c0UnNDZjI0QUhGbmhHRU5FV2EK",
      "windows": {
        "installMode": "basicUi"
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "width": 800,
        "height": 600,
        "resizable": true,
        "title": "Meshtastic Desktop Flasher",
        "decorations": true
      }
    ]
  }
}