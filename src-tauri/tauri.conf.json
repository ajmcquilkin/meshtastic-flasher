{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "pnpm run ui:build",
    "beforeDevCommand": "pnpm run ui:dev",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Meshtastic Desktop Flasher",
    "version": "0.3.0"
  },
  "plugins": {
    "fs": {
      "scope": [
        "**",
        "$APPDATA/*",
        "$APPLOG/*"
      ]
    },
    "shell": {
      "open": ".*"
    }
  },
  "tauri": {
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "org.meshtastic.flasher",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": [
        "https://api.meshtastic.org/updater/meshtastic-desktop-flasher/{{target}}/{{arch}}/{{current_version}}"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlEQ0MyMDM3RTE4MDBFN0IKUldSN0RvRGhOeURNblpSeDNjTzJYRVpvd2tqaGhsSm9IMEhlK1RGRkx0Q1FRaElzc3FTZjZiUHkK",
      "windows": {
        "installMode": "basicUi",
        "installerArgs": []
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "width": 800,
        "height": 600,
        "resizable": true,
        "title": "Meshtastic Desktop Flasher",
        "decorations": false
      }
    ]
  }
}