{
  "$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "ignore": [
      "src/bindings/index.ts"
    ]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "ignore": [
      "src/bindings/index.ts"
    ],
    "enabled": true,
    "rules": {
      "all": true,
      "correctness": {
        "useExhaustiveDependencies": "warn"
      },
      "suspicious": {
        "noDoubleEquals": "warn"
      },
      "style": {
        "noImplicitBoolean": "off"
      }
    }
  }
}